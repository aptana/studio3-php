<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="indexer" name="%phpIndexerParticipant.name" schema="schema/indexer.exsd"/>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.aptana.editor.php.internal.ui.editor.PHPSourceEditor"
            contributorClass="com.aptana.editor.php.internal.ui.editor.PHPActionContributor"
            default="false"
            extensions="php, phtml, inc ,ctp"
            icon="icons/full/obj16/php.png"
            id="com.aptana.editor.php"
            name="%editor.name">
         <contentTypeBinding
               contentTypeId="com.aptana.contenttype.phtml.php">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="php, phtml, inc, ctp"
            id="com.aptana.contenttype.phtml.php"
            name="%content-type.name"
            priority="normal">
      </content-type>
   </extension>
   <extension
         id="phpNature"
         name="%nature.name"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.aptana.editor.php.core.PHPNature">
         </run>
      </runtime>
      <builder
            id="com.aptana.editor.php.aptanaPhpBuilder">
      </builder>
      <content-type
            id="com.aptana.contenttype.phtml.php">
      </content-type>
      <content-type
            id="com.aptana.contenttype.beaver">
      </content-type>
      <content-type
            id="com.aptana.contenttype.coffeescript">
      </content-type>
      <content-type
            id="com.aptana.contenttype.css">
      </content-type>
      <content-type
            id="com.aptana.contenttype.diff">
      </content-type>
      <content-type
            id="com.aptana.contenttype.dtd">
      </content-type>
      <content-type
            id="com.aptana.contenttype.html">
      </content-type>
      <content-type
            id="com.aptana.contenttype.idl">
      </content-type>
      <content-type
            id="com.aptana.contenttype.js">
      </content-type>
      <content-type
            id="com.aptana.contenttype.jsca">
      </content-type>
      <content-type
            id="com.aptana.contenttype.jsca">
      </content-type>
      <content-type
            id="com.aptana.contenttype.jss">
      </content-type>
      <content-type
            id="com.aptana.contenttype.markdown">
      </content-type>
      <content-type
            id="com.aptana.contenttype.sdocml">
      </content-type>
      <content-type
            id="com.aptana.contenttype.svg">
      </content-type>
      <content-type
            id="com.aptana.contenttype.xsl">
      </content-type>
      <content-type
            id="com.aptana.editor.text.content-type.generic">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/full/ovr16/php_ovr.gif"
            id="com.aptana.editor.php.projectnature"
            natureId="com.aptana.editor.php.phpNature">
      </image>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.aptana.editor.php.core.PHPCorePreferenceInitializer">
      </initializer>
      <initializer
            class="com.aptana.editor.php.internal.ui.preferences.PhpUIPreferencesInitializer">
      </initializer>
      <initializer
            class="com.aptana.editor.php.internal.contentAssist.preferences.ContentAssistPreferencesInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="com.aptana.editor.php.internal.ui.preferences.PhpDevelopmentPage"
            id="com.aptana.editor.php.PHPDevelopmentPage"
            name="%project-property-page.name">
         <enabledWhen>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="com.aptana.editor.php.phpNature">
               </test>
            </and>
         </enabledWhen>
      </page>
      <page
            class="com.aptana.editor.php.internal.ui.preferences.PHPBuildpathPropertyPage"
            id="com.aptana.editor.php.buildPathPropertyPage"
            name="%buildPath">
         <enabledWhen>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="com.aptana.editor.php.phpNature">
               </test>
            </and>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="com.aptana.editor.common.preferences.EditorsPreferencePage"
            class="org2.eclipse.php.internal.ui.preferences.PHPPreferencePage"
            id="com.aptana.editor.php.preference.PHPPreferencePage"
            name="PHP">
      </page>
      <page
            category="com.aptana.editor.php.preference.PHPPreferencePage"
            class="com.aptana.editor.php.internal.ui.preferences.PHPLibrariesPreferencePage"
            id="com.aptana.editor.php.librariesPage"
            name="%libraries">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="com.aptana.ui.wizards.category"
            class="com.aptana.editor.php.internal.ui.wizard.NewPHPProjectWizard"
            finalPerspective="com.aptana.ui.WebPerspective"
            icon="icons/full/obj16/php_wiz.png"
            id="com.aptana.editor.php.NewPHPProjectWizard"
            name="%new-project-wizard.name"
            preferredPerspectives="com.aptana.ui.WebPerspective"
            project="true">
         <description>
            %new-project-wizard.description
         </description>
      </wizard>
      <primaryWizard
            id="com.aptana.editor.php.NewPHPProjectWizard">
      </primaryWizard>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            associatedExtensionId="org.eclipse.ui.navigator.resourceContent"
            type="new"
            wizardId="com.aptana.editor.php.NewPHPProjectWizard">
         <enablement></enablement>
      </commonWizard>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="%phpEditingContext"
            id="com.aptana.editor.php.editorContext"
            name="%phpEditing"
            parentId="com.aptana.scripting.context">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="%phpActions"
            id="com.aptana.editor.php.source.category"
            name="%phpSource">
      </category>
      <command
            categoryId="org.eclipse.ui.category.navigate"
            description="%openDeclaration.description"
            id="com.aptana.editor.php.openDeclaration"
            name="%openDeclaration.name">
      </command>
      <command
            categoryId="com.aptana.ui.category"
            description="%command.openType.description"
            id="com.aptana.editor.php.openType.command"
            name="%command.openType.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="com.aptana.editor.php.openType.command"
            icon="icons/full/obj16/opentype.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <!-- Open Type -->
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.eclipse.search.searchActionSet">
            <command
                  commandId="com.aptana.editor.php.openType.command"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.aptana.editor.php.internal.ui.handler.OpenTypeHandler"
            commandId="com.aptana.editor.php.openType.command">
            <enabledWhen>
	            <with
	                  variable="activeEditor">
	               <instanceof
	                     value="com.aptana.editor.php.internal.ui.editor.PHPSourceEditor">
	               </instanceof>
	            </with>
        	</enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.aptana.editor.php.openDeclaration"
            contextId="com.aptana.editor.php.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F3">
      </key>
      <key
            commandId="com.aptana.editor.php.openType.command"
            contextId="com.aptana.editor.php.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+T">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.aptana.ui.WebPerspective">
         <actionSet
               id="com.aptana.editor.php.presentation">
         </actionSet>
      </perspectiveExtension>
   </extension>
   <extension
         id="aptanaPhpBuilder"
         name="%aptanaPHPBuilder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="com.aptana.editor.php.indexer.IncrementalPHPProjectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         point="com.aptana.parsing.parser">
      <parser
            class="com.aptana.editor.php.internal.parser.PHTMLParser"
            content-type="com.aptana.contenttype.phtml.php">
      </parser>
      <!-- Register the PHP parser to work on partitions as well. This is needed for the code-formatting process. -->
      <parser
            class="com.aptana.editor.php.internal.parser.PHPParser"
            content-type="com.aptana.contenttype.php">
      </parser>
   </extension>
   <extension
         point="com.aptana.editor.php.indexer">
      <indexer
            class="com.aptana.editor.php.internal.indexer.PDTPHPModuleIndexer"
            name="PHP Module Indexer">
      </indexer>
   </extension>
   <extension
         point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectorTargets">
      <target
            id="com.aptana.editor.php"
            name="%aptanaPHPEditor">
      </target>
   </extension>
   <extension
         point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectors">
      <hyperlinkDetector
            activate="true"
            class="com.aptana.editor.php.internal.ui.editor.hyperlink.PHPHyperlinkDetector"
            id="com.aptana.editor.php.hyperlinkDetector"
            name="%phpHyperlinkDetector.name"
            targetId="com.aptana.editor.php">
      </hyperlinkDetector>
   </extension>
   <extension point="org.eclipse.ui.editors.annotationTypes">
		<type name="com.aptana.php.ui.occurrences">
		</type>		
		<type
        name="com.aptana.php.ui.occurrences.write"
        super="com.aptana.php.ui.occurrences">
		</type>
   </extension>
   <extension point="org.eclipse.ui.editors.markerAnnotationSpecification">
		<specification annotationType="com.aptana.php.ui.occurrences"
			label="%phpReadOccurrencesLabel" icon="icons/full/obj16/searchm_obj.gif"
			textPreferenceKey="PHPReadOccurrenceIndication" textPreferenceValue="false"
			highlightPreferenceKey="PHPReadOccurrenceHighlighting"
			highlightPreferenceValue="true" contributesToHeader="false"
			overviewRulerPreferenceKey="PHPReadOccurrenceIndicationInOverviewRuler"
			overviewRulerPreferenceValue="true"
			verticalRulerPreferenceKey="PHPReadOccurrenceIndicationInVerticalRuler"
			verticalRulerPreferenceValue="false" colorPreferenceKey="PHPReadOccurrenceIndicationColor"
			colorPreferenceValue="212,212,212" presentationLayer="4"
			showInNextPrevDropdownToolbarActionKey="showOccurrenceInNextPrevDropdownToolbarAction"
			showInNextPrevDropdownToolbarAction="true"
			isGoToNextNavigationTargetKey="isOccurrenceGoToNextNavigationTarget"
			isGoToNextNavigationTarget="false" isGoToPreviousNavigationTargetKey="isOccurrenceGoToPreviousNavigationTarget"
			isGoToPreviousNavigationTarget="false" textStylePreferenceKey="PHPReadOccurrenceTextStyle"
			textStylePreferenceValue="NONE">
		</specification>
		<specification annotationType="com.aptana.php.ui.occurrences.write"
			colorPreferenceKey="PHPWriteOccurrenceIndicationColor"
			colorPreferenceValue="240,216,168" highlightPreferenceKey="PHPWriteOccurrenceHighlighting"
			highlightPreferenceValue="true" icon="icons/full/obj16/searchm_obj.gif"
			label="%phpWriteOccurrencesLabel" overviewRulerPreferenceKey="PHPWriteOccurrenceIndicationInOverviewRuler"
			overviewRulerPreferenceValue="true" textPreferenceKey="PHPWriteOccurrenceIndication"
			textPreferenceValue="false" textStylePreferenceKey="PHPWriteOccurrenceTextStyle"
			textStylePreferenceValue="NONE"
			verticalRulerPreferenceKey="PHPWriteOccurrenceIndicationInVerticalRuler"
			verticalRulerPreferenceValue="false">
		</specification>
	</extension>
   <extension
         point="org.eclipse.core.filebuffers.annotationModelCreation">
      <factory
            class="com.aptana.editor.common.ExternalFileAnnotationModelFactory"
            contentTypeId="com.aptana.contenttype.phtml.php">
      </factory>
   </extension>
   <extension
         point="com.aptana.preview.previewHandlers">
      <handler
            class="com.aptana.preview.handlers.WebServerPreviewHandler"
            contentType="com.aptana.contenttype.phtml.php">
      </handler>
   </extension>
</plugin>
