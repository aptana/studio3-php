         <meta.section type="examples"/>
      </appinfo>
      <documentation>
         &lt;p&gt;
&lt;pre&gt;
&lt;extension point=&quot;org2.eclipse.php.ui.phpPreferencePageBlocks&quot;&gt;
    &lt;block
        class=&quot;test.MyPHPDebugPreferencePageAddon&quot;
        id=&quot;test.MyPHPDebugPreferencePageAddon&quot;
        name=&quot;PHP Debug Preference Page Addon&quot;
        pageId=&quot;org2.eclipse.php.debug.ui.preferences.PhpDebugPreferencePage&quot;/&gt;
&lt;/extension&gt;
&lt;/pre&gt;
&lt;/p&gt;
      </documentation>
   </annotation>

   <annotation>
